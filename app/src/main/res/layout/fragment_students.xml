<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <include layout="@layout/activity_students"/>

    <GridLayout
        android:id="@+id/gridLayout_fragment_students_gridForPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_fragment_students_searchQuery"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="start"
            android:inputType="text"
            android:hint="@string/fragment_students_editText_searchPlaceholder"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FAB_fragment_students_findByQuery"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/magnifier"
            app:fabSize="mini"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FAB_fragment_students_clearField"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/clear"
            app:fabSize="mini"
            app:backgroundTint="#116062"

            />

    </GridLayout>

    <Button
        android:id="@+id/button_fragment_students_changeView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="Изменить представление"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout_fragment_students_gridForPanel"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_fragment_students_list"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/button_fragment_students_changeView"
        app:layout_constraintBottom_toTopOf="@id/gridLayout_fragment_students_gridForButtons2" />

    <GridLayout
        android:id="@+id/gridLayout_fragment_students_gridForButtons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_fragment_students_list">

        <Button
            android:id="@+id/button_fragment_students_getBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:text="@string/fragment_students_button_getBack"
            android:textSize="12sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FAB_fragment_students_goToForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:src="@drawable/plus"
            app:backgroundTint="@color/colorYellow"
            app:fabSize="mini" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>