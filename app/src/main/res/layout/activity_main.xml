<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".presentaton.activity.MainActivity">

    <Button
        android:id="@+id/button_activity_main_goToRecyclerViewList"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_button_openRecyclerViewList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_activity_main_goToNoteList"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_button_goToNoteList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_activity_main_goToRecyclerViewList"
        app:layout_constraintVertical_bias="0.242"/>

    <Button
        android:id="@+id/button_activity_main_openLeetCode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_button_openLeetCode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_activity_main_goToNoteList"
        app:layout_constraintVertical_bias="0.320" />

    <Button
        android:id="@+id/button_activity_main_programs"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_button_programs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_activity_main_openLeetCode"
        app:layout_constraintVertical_bias="0.450" />

</androidx.constraintlayout.widget.ConstraintLayout>