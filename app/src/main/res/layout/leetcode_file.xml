<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout_leetcode_file_gridForPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1">

    <EditText
        android:id="@+id/editText_leetcode_file_setPalindrome"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:inputType="number"
        android:maxLength="9"
        android:hint="Введите число-палиндром" />

    <Button
        android:id="@+id/button_leetcode_file_checkPalindrome"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="@string/leetcode_file_editText_checkPalindrome"
        android:textSize="12sp"/>

    </GridLayout>

    <TextView
        android:id="@+id/textView_leetcode_file_showResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"/>
</LinearLayout>